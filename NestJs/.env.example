# Database
DATABASE_URL=postgresql://demo_user:demo_pass@localhost:5432/demo_db

# JWT Authentication
JWT_SECRET=sua-chave-secreta-aqui-minimo-32-caracteres
JWT_EXPIRES_IN=24h

# Frontend URL (para links de email)
FRONTEND_URL=http://localhost:3000

# MercadoPago
MERCADOPAGO_ACCESS_TOKEN=your_access_token_here

# Storage
STORAGE_TYPE=local
UPLOAD_PATH=./uploads

# AWS S3 / MinIO (optional - if STORAGE_TYPE=s3)
# Para MinIO local (Docker), use:
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=minioadmin
AWS_SECRET_ACCESS_KEY=minioadmin123
AWS_S3_BUCKET=demo-bucket
AWS_ENDPOINT=http://localhost:9000

# Para AWS S3 real, comente AWS_ENDPOINT e use suas credenciais:
# AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=sua-key
# AWS_SECRET_ACCESS_KEY=sua-secret
# AWS_S3_BUCKET=seu-bucket
# AWS_ENDPOINT=

# Email Service (Nodemailer)
# Se n√£o configurar, usa Ethereal (fake SMTP para testes)
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USER=seu-email@gmail.com
MAIL_PASSWORD=sua-senha-de-app
MAIL_FROM=noreply@example.com

# App
PORT=3000
NODE_ENV=development
